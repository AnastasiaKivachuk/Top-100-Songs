{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/common/components/*"
      ],
      "@constants/*": [
        "./src/common/constants/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@helpers/*": [
        "./src//common/helpers/*"
      ],
      "@interfaces/*": [
        "./src/common/interfaces/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@redux/*": [
        "./src/redux/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@contexts/*": [
        "./src/common/contexts/*"
      ],
      "@validation/*": [
        "./src/common/validation/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx",
    "./src/pages/_document.js"
  ],
  "exclude": ["node_modules"]
}
